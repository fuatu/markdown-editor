{
  "name": "markdown-editor",
  "version": "1.0.0",
  "description": "A simple markdown editor. v1.1.0",
  "main": "index.js",
  "scripts": {
    "start": "DEBUG=true electron .",
    "build:macos": "electron-builder --macos --dir",
    "publish:github": "electron-builder --mac -p always"
  },
  "build": {
    "appId": "org.hacktr.markdown-editor",
    "publish": {
      "provider": "github",
      "owner": "fuatu",
      "repo": "markdown-editor"
    }
  },
  "keywords": [],
  "author": "Fuat Ulugay",
  "license": "ISC",
  "devDependencies": {
    "electron": "^9.0.4",
    "electron-builder": "^22.7.0"
  },
  "dependencies": {
    "electron-log": "^4.2.2",
    "electron-updater": "^4.3.1",
    "simplemde": "^1.11.2"
  },
  "extendInfo": {
    "NSAppTransportSecurity": {
      "NSAllowsArbitraryLoads": true
    }
  }
}
